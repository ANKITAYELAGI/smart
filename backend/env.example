# Environment Configuration for Smart Parking System

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=smart_parking

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# IoT Configuration
IOT_ENDPOINT=http://localhost:8000
SENSOR_UPDATE_INTERVAL=3
HEARTBEAT_INTERVAL=30

# Optimization Configuration
SA_INITIAL_TEMPERATURE=100.0
SA_COOLING_RATE=0.95
SA_MIN_TEMPERATURE=1.0
VNS_MAX_ITERATIONS=100

# GMM Configuration
GMM_N_COMPONENTS=3
GMM_RANDOM_STATE=42
MODEL_RETRAIN_INTERVAL=7  # days

# Parking Configuration
DEFAULT_RESERVATION_DURATION=120  # minutes
MAX_ADVANCE_RESERVATION=24  # hours
MIN_RESERVATION_DURATION=30  # minutes

# Cost Calculation Weights
ALPHA_DRIVING_TIME=1.0
BETA_WALKING_TIME=1.0
GAMMA_WAITING_TIME=1.5

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/smart_parking.log

# Development/Production Mode
ENVIRONMENT=development
DEBUG=True

# External APIs (Optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
WEATHER_API_KEY=your-weather-api-key

# Monitoring Configuration
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_INTERVAL=24  # hours
BACKUP_RETENTION_DAYS=30
